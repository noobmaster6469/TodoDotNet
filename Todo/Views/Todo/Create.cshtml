@model TodoItem

<form method="post">
        <legend>Create Todo</legend>
        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" placeholder="Enter todo title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" placeholder="Enter todo description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary">Add todo</button>
    <a asp-controller="Todo" asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}